---
const projects = [
  {
    title: "App Dentist",
    description: "App de uso exclusivo para dentistas para gestionar su agenda, sus doctores, y pacientes.",
    image: "/images/project1.jpg",
    tags: ["Laravel", "PHP", "React Native"],
    link: "https://github.com/TPCarlosLuna05/App-Dentist"
  },
  {
    title: "Luxury Dental Web Page",
    description: "Pagina Web destinada a usuarios para agendar citas, conocer a los doctores de la clinica, y de los procedimientos de la misma.",
    image: "/images/project2.jpg",
    tags: ["HTML", "CSS", "JavaScript"],
    link: "https://github.com/TPCarlosLuna05/Luxury-Dental-Web-Page"
  },
  // Agrega más proyectos según necesites
];
---

<section id="proyectos" class="projects">
  <div class="container">
    <h2>Proyectos</h2>
    <div class="projects-grid">
      {
        projects.map((project) => (
          <article class="project-card">
            <div class="project-image">
              <img
                src={project.image}
                alt={project.title}
                width="600"
                height="400"
                loading="lazy"
              />
            </div>
            <div class="project-content">
              <h3>{project.title}</h3>
              <p>{project.description}</p>
              <div class="tags">
                {project.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
              <a href={project.link} class="project-link" target="_blank">
                Ver proyecto
              </a>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  .projects {
    background-color: var(--section-bg);
  }

  h2 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .project-card {
    background: var(--section-bg);
    border-radius: 1.5rem;
    overflow: hidden;
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
  }

  .project-card:hover {
    transform: translateY(-5px);
  }

  .project-card:hover {
    transform: translateY(-5px);
  }

  .project-image {
    background: var(--background);
    padding: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .project-image img {
    width: 200px;
    height: 200px;
    object-fit: cover;
    border-radius: 50%;
    border: 4px solid var(--primary-color);
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .project-card:hover .project-image img {
    transform: scale(1.05);
    box-shadow: 0 0 30px rgba(168, 85, 247, 0.4);
  }

  .project-content {
    padding: 1rem;
    text-align: center;
  }

  .project-content h3 {
    margin-bottom: 0.5rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 1rem 0;
  }

  .tag {
    background: var(--background);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 2rem;
    font-size: 0.9rem;
    border: 2px solid white;
  }

  .project-link {
    display: inline-block;
    color: white;
    text-decoration: none;
    font-weight: 500;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    border: 2px solid white;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    background: transparent;
  }

  .project-link:hover {
    background: white;
    color: var(--background);
  }

  @media (max-width: 768px) {
    h2 {
      font-size: 2rem;
    }
  }
</style>
